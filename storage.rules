rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // 기본 규칙: 인증된 사용자만 접근 가능
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // 과제 파일 업로드 (교사만)
    match /assignments/{classId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // 일반 파일 업로드 (인증된 사용자)
    match /files/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // 과제 관련 파일 업로드 경로
    match /files/assignments/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // 제출물 파일 업로드
    match /submissions/{classId}/{studentId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == studentId;
      allow delete: if request.auth != null && request.auth.uid == studentId;
    }
    
    // 반 관련 파일
    match /classes/{classId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
}
